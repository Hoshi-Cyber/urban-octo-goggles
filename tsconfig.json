{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/site.config": ["src/site.config.ts"]
    },
    "types": ["astro/client"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src",
    "astro.config.*",
    "src/env.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["dist"]
}
