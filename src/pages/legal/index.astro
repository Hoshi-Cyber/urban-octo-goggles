---
import BaseLayout from "../../components/layout/BaseLayout.astro";
import {
  LegalLayout,
  LegalHubSection,
  LegalCardGrid,
  LegalCard,
} from "../../components/legal";

const pageTitle = "Legal & Policies";
const pageDescription =
  "Central hub for CVWriting.co.ke legal documents, including Terms of Service, Privacy Policy, Cookies & Preferences, and Refund & Revisions Policy.";

const lastUpdated = "24 November 2025";

const policies = [
  {
    slug: "terms",
    title: "Terms of Service",
    description:
      "The rules that govern your use of CVWriting.co.ke and our CV writing and related professional services.",
    lastUpdated,
  },
  {
    slug: "privacy",
    title: "Privacy Policy",
    description:
      "How we collect, use, store, and protect your personal data in line with the Kenya Data Protection Act, 2019.",
    lastUpdated,
  },
  {
    slug: "cookies",
    title: "Cookies & Preferences Policy",
    description:
      "How we use cookies and similar technologies on CVWriting.co.ke and how you can manage your preferences.",
    lastUpdated,
  },
  {
    slug: "refunds-revisions",
    title: "Refund & Revisions Policy",
    description:
      "How refunds, credits, and revision requests are handled for CVWriting.co.ke services in Kenya.",
    lastUpdated,
  },
];
---

<BaseLayout title={`${pageTitle} â€“ CVWriting.co.ke`} description={pageDescription}>
  <LegalLayout showSidebar={false}>
    <LegalHubSection
      title={pageTitle}
      intro="This hub lists all core legal documents that apply when you use CVWriting.co.ke or engage our CV writing and related services. Each policy explains its scope, your rights and our responsibilities in clear sections."
    >
      <LegalCardGrid>
        {policies.map((policy) => (
          <LegalCard
            href={`/legal/${policy.slug}/`}
            title={policy.title}
            description={policy.description}
            lastUpdated={policy.lastUpdated}
          />
        ))}
      </LegalCardGrid>
    </LegalHubSection>
  </LegalLayout>
</BaseLayout>
