---
export interface Props {
  title: string;
  sub?: string;
  primaryHref: string;
  primaryLabel: string;
}

const { title, sub, primaryHref, primaryLabel } = Astro.props as Props;

import Button from "../Button/index.astro";
import "./LeadCaptureBanner.css";
---

<aside
  data-section="lead-cta"
  aria-labelledby="lead-cta-title"
  role="complementary"
>
  <div class="container">
    <div class="lead">
      <div class="lead__inner">
        <div class="lead__body">
          <h2 id="lead-cta-title" class="lead__title">
            {title}
          </h2>
          {sub && <p class="lead__sub">{sub}</p>}
        </div>

        <div class="lead__actions">
          <Button
            label={primaryLabel}
            href={primaryHref}
            variant="primary"
            size="md"
            cta="lead-banner:primary"
          />
        </div>
      </div>
    </div>
  </div>
</aside>
