---
export interface Props {
  title: string;
  sub?: string;
  primaryHref: string;
  primaryLabel: string;
  secondaryHref?: string;
  secondaryLabel?: string;
}

const {
  title,
  sub,
  primaryHref,
  primaryLabel,
  secondaryHref,
  secondaryLabel,
} = Astro.props as Props;

import Button from "../Button/index.astro";
import "./LeadCaptureBanner.css";
---

<aside
  data-section="lead-cta"
  aria-labelledby="lead-cta-title"
  role="complementary"
>
  <div class="container">
    <div class="lead">
      <div class="lead__inner">
        <div class="lead__body">
          <h2 id="lead-cta-title" class="lead__title">
            {title}
          </h2>
          {sub && <p class="lead__sub">{sub}</p>}
        </div>

        <div class="lead__actions">
          <Button
            label={primaryLabel}
            href={primaryHref}
            variant="primary"
            size="md"
            cta="lead-banner:primary"
          />

          {secondaryHref && secondaryLabel && (
            <Button
              label={secondaryLabel}
              href={secondaryHref}
              variant="link"
              size="md"
              cta="lead-banner:secondary"
            />
          )}
        </div>
      </div>
    </div>
  </div>
</aside>
