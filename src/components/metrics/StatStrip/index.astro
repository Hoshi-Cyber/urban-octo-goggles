---
export interface Stat {
  value: string | number;
  label: string;
}

interface Props {
  stats?: Stat[];
  eyebrow?: string;
  compact?: boolean;
}

const {
  stats = [],
  eyebrow = "By the numbers",
  compact = false,
} = Astro.props as Props;

// Component stylesheet â€“ handles all StatStrip visuals/layout.
import "./StatStrip.css";
---

<section
  class={`statstrip${compact ? " statstrip--compact" : ""}`}
  aria-label={eyebrow || "Key metrics"}
  data-section="statstrip"
>
  <div class="statstrip__inner">
    {eyebrow && (
      <header class="statstrip__head">
        <p class="statstrip__eyebrow">{eyebrow}</p>
      </header>
    )}

    {stats.length > 0 && (
      <ul class="statstrip__list" role="list">
        {stats.map(({ value, label }) => (
          <li class="statstrip__item">
            <div class="statstrip__value">{value}</div>
            <div class="statstrip__label">{label}</div>
          </li>
        ))}
      </ul>
    )}
  </div>
</section>
