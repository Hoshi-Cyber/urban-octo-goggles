---
interface Cta {
  label: string;
  href: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  primary?: Cta;     // e.g., { label: "Download guide", href: "/guide.pdf" }
  secondary?: Cta;   // e.g., { label: "No thanks", href: "#" }
  icon?: string;     // optional emoji or small SVG text
}

const {
  title = "Get the complete guide",
  subtitle = "Practical steps you can apply today. No fluff.",
  primary = { label: "Download free PDF", href: "#" },
  secondary = { label: "Maybe later", href: "#" },
  icon = "ðŸ“˜",
} = Astro.props as Props;
---
<section class="leadmag container" role="region" aria-label="Lead magnet">
  <div class="leadmag__card card">
    <div class="leadmag__content">
      <div class="leadmag__icon" aria-hidden="true">{icon}</div>
      <h2 class="leadmag__title h2">{title}</h2>
      <p class="leadmag__subtitle">{subtitle}</p>
    </div>

    <div class="leadmag__actions">
      <a class="btn btn-primary" href={primary.href}>{primary.label}</a>
      {secondary && (
        <a class="btn leadmag__secondary" href={secondary.href}>{secondary.label}</a>
      )}
    </div>
  </div>
</section>

<style>
  @import "./LeadMagnetStrip.css";
</style>
