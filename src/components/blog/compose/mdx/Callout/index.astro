---
interface Props {
  type?: "info" | "success" | "warn" | "danger";
  title?: string;
}
const { type = "info", title } = Astro.props as Props;
---
<section class="mdx-callout" data-type={type} role="note" aria-label={title ? `Callout: ${title}` : "Callout"}>
  {title && <p class="mdx-callout__title">{title}</p>}
  <div class="mdx-callout__body">
    <slot />
  </div>
</section>

<style>
  @import "./Callout.css";
</style>
