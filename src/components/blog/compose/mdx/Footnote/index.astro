---
// src/components/blog/mdx/Footnote/index.astro

interface Props {
  id?: string | number;
}

const { id } = Astro.props as Props;
const label = id ? `Footnote ${id}` : "Footnote";
const href = id ? `#fn-${id}` : "#";
const displayId = id ?? "n";
---
<sup class="mdx-footnote">
  <a href={href} aria-label={label}>
    [{displayId}]
  </a>
</sup>

<style>
  @import "./Footnote.css";
</style>
