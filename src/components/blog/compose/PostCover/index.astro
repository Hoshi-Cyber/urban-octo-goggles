---
// File: src/components/blog/compose/PostCover/index.astro

interface PostCoverProps {
  src: string
  alt?: string
  width?: number
  height?: number
  loading?: "eager" | "lazy"
}

const {
  src,
  alt = "",
  width = 1280,
  height = 720,
  loading = "eager",
} = Astro.props as PostCoverProps

// Local component CSS only (per Fix Plan 155)
import css from "./PostCover.css?url"
---
<figure class="post__cover">
  <link rel="stylesheet" href={css} />
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    decoding="async"
    itemprop="image"
  />
</figure>
